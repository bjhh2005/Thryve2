{
  "name": "thryve-fronted",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Thryve Workflow Editor Application",
  "author": {
    "name": "五鼠上将",
    "email": "bjhh2005@outlook.com"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:preview": "electron ."
  },
  "dependencies": {
    "@flowgram.ai/form-materials": "^0.2.14",
    "@flowgram.ai/free-container-plugin": "^0.2.14",
    "@flowgram.ai/free-group-plugin": "^0.2.14",
    "@flowgram.ai/free-layout-editor": "^0.2.14",
    "@flowgram.ai/free-node-panel-plugin": "^0.2.14",
    "@flowgram.ai/free-snap-plugin": "^0.2.14",
    "@flowgram.ai/runtime-interface": "^0.2.14",
    "@flowgram.ai/runtime-js": "^0.2.14",
    "idb": "^8.0.3",
    "fuzzysort": "^3.1.0",
    "lodash-es": "^4.17.21",
    "mime-types": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-textarea-autosize": "^8.5.9",
    "remark-gfm": "^4.0.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.27.1",
    "@eslint/js": "^9.25.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "less": "^4.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.bjhh2005.thryve",
    "productName": "Thryve",
    "copyright": "Copyright © 2024 五鼠上将",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../Backend/dist/thryve_backend.exe",
        "to": "backend/thryve_backend.exe"
      },
      {
        "from": "../Backend/.env",
        "to": "backend/.env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Thryve"
    },
    "mac": {
      "target": "dmg",
      "icon": "../logo/logo_v_1.0.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "../logo/logo_v_1.0.png"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  }
}